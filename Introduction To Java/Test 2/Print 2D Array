public class Solution {
    public static void print2DArray(int input[][]) {
        int n = input.length;
        for (int i = 0; i < n; i++) {
            for (int j = n - i; j > 0; j--) {
                for (int k = 0; k < input[i].length; k++) {
                    System.out.print(input[i][k] + " ");
                }
                System.out.println();
            }
        }
    }
}
